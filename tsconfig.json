{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"jsx": "react-native",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"noEmit": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "es5",
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"isolatedModules": true,
		"baseUrl": "src",
		"paths": {
			"~/*": ["*"]
		}
	},
	"include": ["src"],
	"files": ["src/styles/styled.d.ts", "src/declaration.d.ts"]
}
